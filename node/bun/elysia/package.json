{
  "name": "metric-tracking-system",
  "version": "0.1.0",
  "module": "src/main.ts",
  "scripts": {
    "dev": "bun run --watch src/main.ts",
    "test": "bun test",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile build/server src/main.ts",
    "build:bundle": "cross-env NODE_ENV=production bun build --minify-whitespace --minify-syntax --target bun --outfile build/server.js src/main.ts",
    "start:bundle": "bun build/server.js"
  },
  "dependencies": {
    "@elysiajs/openapi": "^1.4.11",
    "elysia": "^1.4.12",
    "mongodb": "^6.20.0",
    "tslib": "^2.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tsconfig/bun": "^1.0.9",
    "@types/bun": "^1.3.0",
    "cross-env": "^10.1.0"
  }
}